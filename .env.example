# =============================================================================
# SpriteForge Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your values.
# .env is gitignored — never commit secrets.

# ---------------------------------------------------------------------------
# Azure AI Foundry (used by AzureChatProvider with DefaultAzureCredential)
# ---------------------------------------------------------------------------
AZURE_AI_PROJECT_ENDPOINT=https://<your-foundry-project>.azure.com/

# ---------------------------------------------------------------------------
# GPT-Image-1.5 — API Key authentication (direct Azure OpenAI resource)
# ---------------------------------------------------------------------------
AZURE_OPENAI_GPT_IMAGE_ENDPOINT=https://<your-resource>.openai.azure.com/
AZURE_OPENAI_GPT_IMAGE_API_KEY=<your-api-key>

# ---------------------------------------------------------------------------
# Integration tests (set to 1 to enable)
# ---------------------------------------------------------------------------
SPRITEFORGE_RUN_INTEGRATION=0
